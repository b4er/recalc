{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "cabal: build",
      "command": "cabal build",
      "type": "shell",
      "problemMatcher": [],
      "group": "build"
    },
    {
      "label": "cabal: test",
      "command": "cabal test spec",
      "type": "shell",
      "group": {
        "kind": "test",
        "isDefault": true
      }
    },
    {
      "label": "nix: build",
      "command": "nix build",
      "type": "shell",
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "npm: compile",
      "command": "npm --prefix recalc-vscode run compile",
      "type": "shell",
      "dependsOn": "cabal: build"
    }
  ]
}
