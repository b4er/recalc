{
  "include": ["src"],
  "compilerOptions": {
    "jsx": "react-jsx",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,

    "experimentalDecorators": true,

    "types": [
      "@types/vscode-webview"
    ]
  },
  "exclude": ["node_modules"]
}
